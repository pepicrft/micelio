<Layouts.app
  flash={@flash}
  current_scope={assigns[:current_scope]}
  current_user={assigns[:current_user]}
>
  <div class="changelog-container">
    <div class="changelog-nav">
      <.link navigate={~p"/changelog"} class="changelog-nav-link">
        â† Back to Changelog
      </.link>
    </div>

    <div class="changelog-header">
      <h1 class="changelog-title">
        Version {@version}
      </h1>
      <p class="changelog-tagline">
        All changes included in version {@version}.
      </p>
    </div>

    <div class="changelog-entries">
      <%= for entry <- @entries do %>
        <.entry_card entry={entry} />
      <% end %>
    </div>

    <%= if Enum.empty?(@entries) do %>
      <div class="changelog-empty">
        <div class="changelog-empty-icon">ğŸ“</div>
        <h3 class="changelog-empty-title">No entries for this version</h3>
        <p class="changelog-empty-message">
          No changelog entries found for version {@version}.
        </p>
      </div>
    <% end %>
  </div>
</Layouts.app>
